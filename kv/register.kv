<RegisterScreen>:
    customer_name: customer_name
    customer_address: customer_address
    customer_phone: customer_phone
    burger_name: burger_name
    burger_quantity: burger_quantity
    burger_size: burger_size
    order_total: order_total

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        TextInput:
            id: customer_name
            hint_text: "Customer Name"
            multiline: False

        TextInput:
            id: customer_address
            hint_text: "Customer Address"
            multiline: False

        TextInput:
            id: customer_phone
            hint_text: "Customer Phone"
            multiline: False

        TextInput:
            id: burger_name
            hint_text: "Burger Name"
            multiline: False

        TextInput:
            id: burger_quantity
            hint_text: "Quantity"
            multiline: False

        TextInput:
            id: burger_size
            hint_text: "Size (e.g. small, medium, large)"
            multiline: False

        TextInput:
            id: order_total
            hint_text: "Total Price"
            multiline: False

        Button:
            text: "Register Order"
            on_press: root.register_order()
        
        Button:
            text: "Back"
            on_press:
                root.manager.current = 'main'
