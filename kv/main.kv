<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Load Clients"
                on_release: root.load_clientes()
            Button:
                text: "Load Burgers"
                on_release: root.load_hamburgueres()
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Clients"
            Label:
                text: "Burgers"
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                BoxLayout:
                    id: cliente_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
            ScrollView:
                BoxLayout:
                    id: hamburguer_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
        Button:
            text: "Logout"
            size_hint_y: None
            height: 50
            on_release: app.root.current = 'login'
