<LoginScreen>:
    username: username
    password: password

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Username'

        TextInput:
            id: username
            multiline: False

        Label:
            text: 'Password'

        TextInput:
            id: password
            multiline: False
            password: True

        Button:
            text: 'Login'
            on_press: root.login()

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Welcome to the Main Screen'

        Button:
            text: 'Obter Clientes'
            on_press: root.obter_clientes()

        Button:
            text: 'Adicionar Cliente'
            on_press: root.adicionar_cliente()

        Button:
            text: 'Obter Hamburgueres'
            on_press: root.obter_hamburgueres()

        Button:
            text: 'Registrar Pedido'
            on_press: root.registrar_pedido()

        Button:
            text: 'Log Out'
            on_press: app.root.current = 'login'
