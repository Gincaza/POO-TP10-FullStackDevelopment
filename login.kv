<LoginScreen>:
    username: username
    password: password

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Username'

        TextInput:
            id: username
            multiline: False

        Label:
            text: 'Password'

        TextInput:
            id: password
            multiline: False
            password: True

        Button:
            text: 'Login'
            on_press: root.login()

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Clientes"
            on_press: root.manager.current = 'clientes'
        Button:
            text: "Hamburgueres"
            on_press: root.manager.current = 'hamburgueres'
        Button:
            text: "Pedidos"
            on_press: root.manager.current = 'pedidos'


<ClientesScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Obter Clientes"
            on_press: root.obter_clientes()
        Button:
            text: "Adicionar Cliente"
            on_press: root.adicionar_cliente()
        Button:
            text: "Voltar"
            on_press: root.manager.current = 'main'

<AdicionarClienteScreen>:
    nome: nome
    morada: morada
    telefone: telefone
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: nome
            hint_text: "Nome"
        TextInput:
            id: morada
            hint_text: "Morada"
        TextInput:
            id: telefone
            hint_text: "Telefone"
        Button:
            text: "Adicionar Cliente"
            on_press: root.adicionar()
        Button:
            text: "Voltar"
            on_press: root.voltar()

<ObterClientesScreen>:
    clientes_label: clientes_label
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: clientes_label
            text: ""
        Button:
            text: "Voltar"
            on_press: root.voltar()


<HamburgueresScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Obter Hamburgueres"
            on_press: root.obter_hamburgueres()
        Button:
            text: "Voltar"
            on_press: root.manager.current = 'main'

<ObterHamburgueresScreen>:
    hamburgueres_label: hamburgueres_label
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: hamburgueres_label
            text: ""
        Button:
            text: "Voltar"
            on_press: root.voltar()


<RegistrarPedidoScreen>:
    id_cliente: id_cliente
    nome_hamburguer: nome_hamburguer
    quantidade: quantidade
    tamanho: tamanho
    valor_total: valor_total
    data_hora: data_hora
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: id_cliente
            hint_text: "ID do Cliente"
        Spinner:
            id: nome_hamburguer
            text: "Nome do Hamburguer"
            values: []
        TextInput:
            id: quantidade
            hint_text: "Quantidade"
        Spinner:
            id: tamanho
            text: "Tamanho"
            values: ["small", "duplo", "normal"]
        TextInput:
            id: valor_total
            hint_text: "Valor Total"
        TextInput:
            id: data_hora
            hint_text: "Data e Hora"
        Button:
            text: "Registrar Pedido"
            on_press: root.registrar()
        Button:
            text: "Voltar"
            on_press: root.voltar()


<PedidosScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Registrar Pedido"
            on_press: root.registrar_pedidos()
        Button:
            text: "Voltar"
            on_press: root.manager.current = 'main'