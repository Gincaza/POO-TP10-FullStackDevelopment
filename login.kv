<LoginScreen>:
    username: username
    password: password

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Username'

        TextInput:
            id: username
            multiline: False

        Label:
            text: 'Password'

        TextInput:
            id: password
            multiline: False
            password: True

        Button:
            text: 'Login'
            on_press: root.login()

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Welcome to the Main Screen'

        Button:
            text: 'Obter Clientes'
            on_press: root.obter_clientes()

        Button:
            text: 'Adicionar Cliente'
            on_press: root.adicionar_cliente()

        Button:
            text: 'Obter Hamburgueres'
            on_press: root.obter_hamburgueres()

        Button:
            text: 'Registrar Pedido'
            on_press: root.registrar_pedido()

        Button:
            text: 'Log Out'
            on_press: app.root.current = 'login'

<ClientesScreen>:
    clientes_label: clientes_label

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Clientes Obtidos'

        ScrollView:
            Label:
                id: clientes_label
                text: ''
                size_hint_y: None
                height: self.texture_size[1]

        Button:
            text: 'Voltar'
            on_press: app.root.current = 'main'

<AdicionarClienteScreen>:
    nome: nome
    morada: morada
    telefone: telefone
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: nome
            hint_text: "Nome"
        TextInput:
            id: morada
            hint_text: "Morada"
        TextInput:
            id: telefone
            hint_text: "Telefone"
        Button:
            text: "Adicionar Cliente"
            on_press: root.adicionar()
        Button:
            text: "Voltar"
            on_press: root.voltar()

<HamburgueresScreen>:
    hamburgueres_label: hamburgueres_label
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: hamburgueres_label
            text: ""
        Button:
            text: "Voltar"
            on_press: root.manager.current = 'main'

<RegistrarPedidoScreen>:
    id_cliente: id_cliente
    nome_hamburguer: nome_hamburguer
    quantidade: quantidade
    tamanho: tamanho
    valor_total: valor_total
    data_hora: data_hora
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: id_cliente
            hint_text: "ID do Cliente"
        Spinner:
            id: nome_hamburguer
            text: "Nome do Hamburguer"
            values: []
        TextInput:
            id: quantidade
            hint_text: "Quantidade"
        Spinner:
            id: tamanho
            text: "Tamanho"
            values: ["small", "duplo", "normal"]
        TextInput:
            id: valor_total
            hint_text: "Valor Total"
        TextInput:
            id: data_hora
            hint_text: "Data e Hora"
        Button:
            text: "Registrar Pedido"
            on_press: root.registrar()
        Button:
            text: "Voltar"
            on_press: root.voltar()


